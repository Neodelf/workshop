<h1>Articles: </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <%= link_to 'New article', new_web_article_path %>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', web_article_path(article) %></td>
      <td><%= link_to 'Edit', edit_web_article_path(article) %></td>
      <td><%= link_to 'Destroy', web_article_path(article),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
